---
import { cn } from "@/utils/cn";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"nav"> {}

const { class: className, ...attrs } = Astro.props;
---

<span
  aria-hidden="true"
  class={cn("flex items-center justify-center", className)}
  {...attrs}
>
