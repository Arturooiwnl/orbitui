  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
